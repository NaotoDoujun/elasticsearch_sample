{
  "mappings": {
    "properties": {
      "category": {
        "type": "text"
      },
      "outgoing_link": {
        "type": "text"
      },
      "text": {
        "type": "text",
        "analyzer": "wikipedia_analyzer"
      },
      "timestamp": {
        "type": "date",
        "format": "strict_date_optional_time||epoch_millis"
      },
      "title": {
        "type": "text",
        "analyzer": "wikipedia_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      }
    }
  },
  "settings": {
    "analysis": {
      "analyzer": {
        "wikipedia_analyzer": {
          "type": "custom",
          "char_filter": [
            "icu_normalizer"
          ],
          "tokenizer": "kuromoji_tokenizer",
          "filter": [
            "kuromoji_baseform",
            "kuromoji_part_of_speech",
            "ja_stop",
            "kuromoji_number",
            "kuromoji_stemmer"
          ]
        }
      }
    }
  }
}