{
  "mappings": {
    "properties": {
      "id": {
        "type": "integer"
      },
      "text": {
        "type": "text",
        "analyzer": "wikipedia_analyzer"
      },
      "timestamp": {
        "type": "date"
      },
      "title": {
        "type": "text",
        "analyzer": "wikipedia_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      }
    }
  },
  "settings": {
    "analysis": {
      "analyzer": {
        "wikipedia_analyzer": {
          "filter": [
            "cjk_width",
            "lowercase"
          ],
          "char_filter": [
            "html_strip"
          ],
          "type": "custom",
          "tokenizer": "kuromoji_user_dict"
        }
      },
      "tokenizer": {
        "kuromoji_user_dict": {
          "token_chars": [
            "letter",
            "digit"
          ],
          "min_gram": "1",
          "max_gram": "2",
          "type": "kuromoji_tokenizer",
          "mode": "search"
        }
      }
    }
  }
}